extends layout

block content
  .container
    each card in cards
      div(class=`card ${card.pokemonName}`)
        .card-row.header
          p.name=card.pokemonName
          p.healthpoints=card.pokemonHealth
          img.type(src=card.pokemonTypeImage)
        img.pokemon-img(src=card.pokemonImage)
        .card-row.move-row.first
          -for (let i = 0; i < card.moveOneAmount; i++)
          img.type(src=card.moveOneImage)

          p.move-name=card.moveOne
          p.damage=card.moveOneDamage
        .card-row.move-row.second
          -for (let i = 0; i < card.moveTwoAmount; i++)
          img.type(src=card.moveTwoImage)

          p.move-name=card.moveTwo
          p.damage=card.moveTwoDamage
        .card-row.description-row
          p weakness
          p resistance
          p retreat cost
        .card-row.description-type-row
          .weakness.type-row
            img.type(src=card.weaknessImage)
          .resistance.type-row
            img.type(src=card.resistanceImage)
          .retreat-cost.type-row
            - for(let i = 0; i<card.retreatCostAmount; i++)
            img.type(src=card.retreatCostImage)