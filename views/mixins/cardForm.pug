mixin cardForm(card)


    div.form-panel
        div.header= title
            form(action=actionURL method='post')
                div.form-input
                    label(for='name') Name:
                    input(type='text' id='name' name='name' value=card.pokemonName)
                div.form-input
                    label(for='health') Health:
                    input(type='text' id='health' name='health' value=card.pokemonHealth)
                div.form-input
                    label(for='pokemon-type') Image of Pokemon's type:
                    input(type='text' id='pokemon-type' name='pokemon-type' value=card.pokemonType)
                div.form-input
                    label(for='pokemon-image') Image of Pokemon:
                    input(type='text' id='pokemon-image' name='pokemon-image' value=card.pokemonImage)
                div.form-input
                    label(for='MoveOneImage') First move's elemental type image:
                    input(type='text' id='MoveOneImage' name='MoveOneImage' value=card.MoveOneImage)
                div.form-input
                    label(for='MoveOne') First move's name:
                    input(type='text' id='MoveOne' name='MoveOne' value=card.MoveOne)
                div.form-input
                    label(for='MoveOneAmount') First move's energy cost:
                    select(id='MoveOneAmount' name='MoveOneAmount' autocomplete='off')
                        -for(let i = 1; i<= 4; i++)
                            option(value=i selected = (Move-One-Amount === card.MoveOneAmount)) #{i}
                div.form-input
                    label(for='MoveOneDamage') First move's damage:
                    input(type='text' id='MoveOneDamage' name='MoveOneDamage' value=card.MoveOneDamage)
                div.form-input
                    label(for='MoveTwoImage') Second move's elemental type image:
                    input(type='text' id='MoveTwoImage' name='MoveTwoImage' value=card.MoveTwoImage)
                div.form-input
                    label(for='MoveTwo') Second move's name:
                    input(type='text' id='MoveTwo' name='MoveTwo' value=card.MoveTwo)
                div.form-input
                    label(for='MoveTwoAmount') Second move's energy cost:
                    select(id='MoveTwoAmount' name='MoveTwoAmount' autocomplete='off')
                        -for(let i = 1; i<= 4; i++)
                            option(value=i selected = (second-move-amount === card.secondMoveDamage)) #{i}
                div.form-input
                    label(for='MoveTwoDamage') Second move's damage:
                    input(type='text' id='MoveTwoDamage' name='MoveTwoDamage' value=card.MoveTwoDamage)
                div.form-input
                    label(for='weakness') Pokemon's weakness image:
                    input(type='text' id='weakness' name='weakness' value=card.weaknessImage)
                div.form-input
                    label(for='resistance') Pokemon's resistance image:
                    input(type='text' id='resistance' name='resistance' value=card.resistanceImage)
                div.form-input
                    label(for='retreat_cost') Energy for Pokemon's retreat:
                    select(id='retreat_cost' name='retreat_cost' autocomplete='off')
                        -for(let i = 1; i<= 3; i++)
                            option(value=i selected = (retreat_cost === card.retreatCostAmount)) #{i}
                div.form-input
                    label(for='retreat-image') Pokemon's element needed for retreat:
                    input(type='text' id='retreat-image' name='retreat-imgae' value=card.retreatCostImage)
                div.button-row
                    a.button.cancel(href='/') Cancel
                    if (mode=='edit')
                        a.button.delete(href=`/delete/${card.id}`) Delete
                    button.button.save(type='submit') Submit